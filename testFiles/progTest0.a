; progama le quatro numeros OP, A, B, C
; OP - operacao
; A, B, C - operandos
; OP == 1 - maior numero
; OP == 2 - menor numero
; OP == 3 - soma
; OP == 4 - produto
; OP == 5 - media
; OP diferentes - exit

;.extern _op1
;.extern _op2
;.extern _op3
;.extern _op4
;.extern _op5

    loadi A0 IO ; get OP
    loadi A1 IO ; get A
    loadi A2 IO ; get B
    loadi A3 IO ; get C

    storei A0 _op
    storei A1 _a
    storei A2 _b
    storei A3 _c

    loadi A6 _um
    loadi A7 _op
    subtract A6 A7
    jmpz A6 _call_op1

    loadi A6 _dois
    loadi A7 _op
    subtract A6 A7
    jmpz A6 _call_op2

    loadi A6 _tres
    loadi A7 _op
    subtract A6 A7
    jmpz A6 _call_op3

    loadi A6 _quatro
    loadi A7 _op
    subtract A6 A7
    jmpz A6 _call_op4

    loadi A6 _cinco
    loadi A7 _op
    subtract A6 A7
    jmpz A6 _call_op5

    jump _end

_call_op1:
    call _op1
    jump _end
_call_op2:
    call _op2
    jump _end
_call_op3:
    call _op3
    jump _end
_call_op4:
    call _op4
    jump _end
_call_op5:
    call _op5
    jump _end

_end:
    exit

_um:      .data 2 1
_dois:    .data 2 2
_tres:    .data 2 3
_quatro:  .data 2 4
_cinco:   .data 2 5

_op:      .data 2 0
_a:       .data 2 0
_b:       .data 2 0
_c:       .data 2 0
